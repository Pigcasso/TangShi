<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ItemTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal</item>
    </style>

    <style name="ItemImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
    </style>
</resources>