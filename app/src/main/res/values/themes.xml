<resources>
    <!-- Base application theme. -->
    <style name="Theme.TangShi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:listDivider">@drawable/list_divider</item>
        <item name="drawerArrowStyle">@style/Theme.TangShi.DrawerArrowToggle</item>
    </style>

    <!-- 解决使用 NavigationUI 返回按钮配色不能修改的问题 -->
    <style name="Theme.TangShi.DrawerArrowToggle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?colorOnPrimary</item>
    </style>
</resources>